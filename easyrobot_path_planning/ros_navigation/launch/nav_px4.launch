<launch>

  <arg name="open_rviz" default="false"/>
  <arg name="move_forward_only" default="false"/>


    <arg name="map_file" default="$(find ros_navigation)/maps/map.yaml"/>
    <!-- Map server -->
    <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_file)"/>

    <node pkg="tf2_ros" name="tf_map2odom" type="static_transform_publisher" args="0 0 0 0 0 0 map odom"/>     
    <!--  <node pkg="tf2_ros" name="tf_odom2base_link" type="static_transform_publisher" args="0 0 0 0 0 0 odom base_link"/> -->

  <!--  <include file="$(find ros_navigation)/launch/amcl.launch"> 
   
  </include>-->
  <!-- move_base -->
  <include file="$(find ros_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find ros_navigation)/rviz/ros_navigation.rviz"/>
  </group>
</launch>
